<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:id="@+id/song_in_playlist_itemd">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:paddingTop="13dp"
        android:maxLength="26"
        android:layout_marginStart="13dp"
        android:textSize="17dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/item_song_name_in_playlist"
        android:gravity="start"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/items_in_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_below="@id/item_song_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/play_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="0dp"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="false"
        android:padding="12dp"
        android:cropToPadding="false"
        android:scaleType="fitEnd"
        android:src="@drawable/baseline_play_arrow_black_48dp" />

    <ImageView
        android:id="@+id/pause_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="0dp"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="false"
        android:padding="12dp"
        android:cropToPadding="false"
        android:scaleType="fitEnd"
        android:visibility="invisible"
        android:src="@drawable/baseline_pause_black_48dp" />

</RelativeLayout>